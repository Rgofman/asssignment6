<center>
    <form action="/admin" method="post" enctype="application/x-www-form-urlencoded">

        <head>
            <title>Admin</title>
            <style>
                table {
                    width: 20%;
                    height: 20%;
                    border: 0px;
                    border-collapse: collapse;
                    padding: 10px;
                }

                table th {
                    border: 0px;
                    padding: 10px;
                    background: #f0f0f0;
                    color: #313030;
                }

                table td {
                    border: 0px;
                    text-align: center;
                    padding: 13px;
                    background: #ffffff;
                    color: #313030;
                }
            </style>
        </head>
        <h2>Welcome back {{stuff}}</h2><br>

        <h1>Create Article</h1>

        <body>
            <table>
                {{#if data.errorMsg.msg}}
                <div class="alert alert-danger" style="height: 50px; margin-top: 8px; font-size: 15px;">
                    {{data.errorMsg.msg}}
                </div>
                {{/if}}
                <tbody>
                    <tr>
                        <td>
                            <div class="form-outline mb-4" style="padding-bottom: 10px;">
                                <input type="text" id="title" name="title" class="form-control" style="width:200px;"
                                    placeholder="Article Title" />
                            </div>
                            <div class="form-outline mb-4" style="padding-bottom: 10px;">
                                <input type="date" id="date" name="date" class="form-control" style="width:200px; "
                                    placeholder="Date" />
                            </div>
                            <div class="form-outline mb-4" style="padding-bottom: 10px;">
                                <input type="text" id="img" name="img" class="form-control" style="width:200px;"
                                    placeholder="Image Name" />
                            </div>
                            <button type="submit" name="login" class="btn btn-primary btn-block mb-4"
                                style="width:200px;">Upload</button>
                        </td>
                        <td>
                            <div class="form-outline mb-4">
                                <textarea class="form-control" name="content" id="content" rows="4"
                                    style="width:500px; height: 170px;" placeholder="Input you article here"></textarea>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </body>
    </form>

